<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rha.foodilous.bmi_calculator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Body Mass Index Calculator"
        android:gravity="center"
        android:textColor="#F44336"
        android:textSize="22sp"
        android:textStyle="bold"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop = "50dp"
        android:id="@+id/Scroll_View">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="15sp"
                android:background="#FFB300"
                android:textStyle="italic"
                android:textColor="#000000"
                android:text="BMI Categories :\nUnderweight is equal or less than 18.5\nNormal weight is from 18.5 to 24.9\nOverweight is from 25 to 29.9\nObesity is equal or greater than 30."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="BMI"
                android:textColor="#FF0000"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="30sp"
                android:id="@+id/Result"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Weight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="Enter weight in lbs"
            android:id="@+id/Weight_Text"
            />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Height"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="5dp"
                android:gravity="center_vertical"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:hint="Enter height in feet"
                android:id="@+id/Height_Text"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Calculate"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/Calculate"
                android:onClick="Calculate_BMI"
                />
        </LinearLayout>
        </ScrollView>


</RelativeLayout>
